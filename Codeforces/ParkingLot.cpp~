#include <stdio.h>

#define MAXN 100009;

int L, b, f, N;
int used[MAXN];

int kind, ag;

int id[110][2];

int func1(int identify, int len) {
  int i, j;

  for (i = 0; i < L - len - b - f; i++) {
    int empty = 0;
    for (j = 0; j < len + b + f; j++) {
      empty |= (used[i + j] == 0);
    }
    if (!empty) {
      for (j = b; j < len + b; j++) {
	used[i + 1] = 1;
      }
      id[identify][0] = i + b;
      id[identify][1] = len;
      return i + b;
    }
  }
  return -1;
}

void func2(int identify) {
  int i;

  for (i = id[identify][0]; i < id[identify][0] + id[identify][1]; i++) {
    used[i] = 0;
  }
}

int main(void) {
  scanf("%d%d%d%d", &L, &b, &f, &N);

  int i;

  for (i = 0; i < N; i++) {
    scanf("%d%d", &kind, &ag);

    if (kind == 1) {
      printf("%d\n", func1(i, ag));
    } else {
      func2(ag);
    }
  }
  return 0;
}
