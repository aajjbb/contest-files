#include <stdio.h>

#define MAXN 1010

char str[MAXN];

int main(void) {
  int i;

  scanf("%d%s", &N, str);

  int ans = MAXN + 20;
  int H = 0;

  for (i = 0; i < N; i++) {
    if (str[i] == 'H') {
      H += 1;
    }
  }

  for (i = 0; i < N; i++) {
    int curr = 0;
    for (j = 0; j < H; j++) {
      curr += (str[(i + j) % N] != 'H');
    }
    ans = min(ans, curr);
  }

  printf("%d\n, ans);

  return 0;
}
